<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_joc">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="A"
            android:id="@+id/litere"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:textStyle="normal"
            android:textColor="#ff0004"
            android:textSize="100dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Timp ramas:"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="150dp"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="90"
            android:id="@+id/timer"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="-90dp"
            android:textSize="60dp"
            android:textColor="#000000" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_below="@+id/textView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Țări:"
            android:id="@+id/textView7"

            android:textColor="#0000ff"
            android:textSize="35dp" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:text=""
            android:ems="10"
            android:id="@+id/tari"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="90dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Orașe:"
            android:id="@+id/textView8"

            android:textColor="#0000ff"
            android:textSize="35dp" />

        <EditText
            android:layout_marginLeft="59dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:text=""
            android:ems="10"
            android:id="@+id/orase"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Munți:"
            android:id="@+id/textView9"

            android:textColor="#0000ff"
            android:textSize="35dp" />
        <EditText
            android:layout_marginLeft="61dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:text=""
            android:ems="10"
            android:id="@+id/munti"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ape:"
            android:id="@+id/textView10"

            android:textColor="#0000ff"
            android:textSize="35dp" />

        <EditText
            android:layout_marginLeft="90dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:text=""
            android:ems="10"
            android:id="@+id/ape"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Plante:"
            android:id="@+id/textView11"

            android:textColor="#0000ff"
            android:textSize="35dp" />

        <EditText
            android:layout_marginLeft="52dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:text=""
            android:ems="10"
            android:id="@+id/plante"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Animale:"
            android:textColor="#0000ff"
            android:textSize="35dp" />

        <EditText
            android:layout_marginLeft="24dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:text=""
            android:ems="10"
            android:id="@+id/animale"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nume:"
            android:id="@+id/textView13"
            android:textColor="#0000ff"
            android:textSize="35dp" />

        <EditText
            android:layout_marginLeft="58dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:text=""
            android:ems="10"
            android:id="@+id/nume"
            android:imeOptions="actionDone"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TableRow>

    <ImageButton
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageButton9"
        android:background="@drawable/buton_stop"
        android:nestedScrollingEnabled="false"
        android:onClick="SendAnswers" />

</LinearLayout>
